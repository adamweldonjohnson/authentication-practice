{{> header}}
{{> navbar}}

<h1>{{heading}}</h1>
{{#if errors}}
  {{#each errors}}
    <div class="notification is-danger">
      {{msg}}
    </div>
  {{/each}}
{{/if}}
{{#if error}}
    <div class="notification is-danger">
      {{msg}}
    </div>
{{/if}}
<div class="card">
  <div class="card-header">
    <h2>Sign in</h2>
  </div>
  <div class="card-content">
    <form action="/login" method="POST">
      <div class="field">
        <label class="label">Userame</label>
        <div class="control">
          <input class="input" type="text" placeholder="e.g MrSnuggles12" name="username">
        </div>
      </div>

      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <input class="input" type="password" placeholder="e.g. PASSWORD!?!" name="password">
        </div>
      </div>

      <div class="field is-grouped">
        <p class="control">
          <button class="button is-primary">Submit</button>
        </p>
        <p class="control">
          <a class="button is-light">
            Cancel
          </a>
        </p>
      </div>
    </form>
  </div>
</div>

<style>
  .card {
    max-width: 60%;
    margin: auto;
  }

  .card-header {
    background-color: #00d1b2;
    color: white;
  }
</style>
